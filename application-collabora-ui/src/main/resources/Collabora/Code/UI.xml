    <property>
      <code>require(['jquery'],function($) {
  //var collaboraConfig = JSON.parse($('#collaboraConfig').text());

  var decorateWithCollaboraButtons = function() {
    var hasEditRights = XWiki.hasEdit;
    var canDoByExt = {};
    // TODO: review extension, right now these are coppied from OO.
    var editableFormats = ['docx', 'xlsx', 'pptx', 'xls', 'csv', 'doc', 'ppt', 'pps', 'ppsx', 'rtf', 'txt', 'mht', 'html', 'htm', 'odt', 'ods', 'odp'];
    editableFormats.forEach(function(x) {
      canDoByExt[x] = 'edit';
    });
    ['pdf', 'djvu', 'fb2', 'epub', 'xps'].forEach(function(x) {
      canDoByExt[x] = 'view';
    });

    // Attachments are displayed using a live table since 14.6, and using a livedata from 14.8.
    var hasPagination = $("#_attachments table").length &gt; 0;

    $("#_attachments span.name").each(function(i, elem) {
      var searchPoint = hasPagination ? $(elem).closest('tr').find('.attachmentActions') : $(elem).siblings('.xwikibuttonlinks');

      if ($(searchPoint).find('a.collaboraEdit').length) {
        return;
      }
      var fileName = $(elem).find('a').text().trim();
      var fileType = fileName.slice(fileName.lastIndexOf('.') + 1).toLowerCase();
      var whatCanDo = canDoByExt[fileType];
      if (!whatCanDo) {
        return;
      }
      if (!hasEditRights) {
        whatCanDo = 'view';
      }

      var queryString = $.param({
        'elem': 'buttons',
        'document': XWiki.Document.currentDocumentReference.toString(),
        'filename': fileName,
        'whatCanDo': whatCanDo,
        'hasPagination': hasPagination
      });

      $.post(
      new XWiki.Document(XWiki.Model.resolve("Collabora.Code.UI", XWiki.EntityType.DOCUMENT)
      ).getURL("get", queryString), function (data) {
        $(searchPoint).append(data);
      });

      return;
    });
  };

  $(decorateWithCollaboraButtons);
  $(document).on('xwiki:livedata:afterEntryFetch', function (event) {
    if ($(event.target).attr('id') === 'docAttachments') {
      // We need to setTimeout(0) to allow the live data to display the entries before decorating them with the buttons.
      setTimeout(decorateWithCollaboraButtons, 0);
    }
  });
  $(document).on('xwiki:livetable:docAttachments:loadingComplete', decorateWithCollaboraButtons);
  $(document).on('xwiki:html5upload:fileFinished', decorateWithCollaboraButtons);
  $(document).on('xwiki:docextra:loaded', decorateWithCollaboraButtons);
});</code>
