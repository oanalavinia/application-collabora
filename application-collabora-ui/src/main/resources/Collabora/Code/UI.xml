{{html clean="false"}}
#if ($request.elem == 'buttons')
  #set ($mainDoc = $xwiki.getDocument('Collabora.Code.Main'))
  ## TODO: Is the icon ok?
  #set ($logoURL = $xwiki.getDocument('Collabora.Code.UI').getAttachmentURL('collabora.ico'))
  #set ($queryString = $escapetool.url({
    'filename': $request.filename,
    'document': $request.document,
    'xpage': 'plain'
  }))
  #set ($actionURL = $mainDoc.getURL('view', $queryString))
  ## TODO: Change title depending if the action is view or edit?
  #set ($title = $escapetool.xml($services.localization.render("collabora.edit.button.title")))
  #set ($label = $escapetool.xml($services.localization.render("collabora.edit.button")))
  ## Starting with XWiki 14.6 the attachments actions are displayed in a livetable, and later, starting with 14.8,
  ## in a livedata, so a different display is needed for different versions.
  #if ($request.get('hasPagination') == 'true')
    ## After the application starts depending on a version of XWiki &gt;= 14.6, this code should be move inside an
    ## org.xwiki.platform.attachment.actions UIX.
    &lt;a class="action collaboraEdit" title="$title" href="$actionURL"&gt;
      &lt;span class="action-icon"&gt;&lt;img src="$logoURL" alt="$title"/&gt;&lt;/span&gt;
      &lt;span class="action-label"&gt;$label&lt;/span&gt;
    &lt;/a&gt;
  #else
    &lt;a class="collaboraEdit btn btn-xs btn-default" href="$actionURL" title="$title"&gt;
      &lt;img src="$logoURL" alt="$title"/&gt;
    &lt;/a&gt;
  #end
#end
{{/html}}
{{/velocity}}</content>
