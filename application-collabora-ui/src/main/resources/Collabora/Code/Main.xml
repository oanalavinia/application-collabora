    <property>
      <code>require(['jquery'], function($) {
  $(function() {
    let wopiClientHost = $("#collaboraServer").data('collaboraServer');
    let fileId = $("#collaboraServer").data('fileId');
    let wopiSrc = window.location.origin + '/xwiki/rest/wopi/files/' + fileId;
    let discoveryDoc = new XWiki.Document(XWiki.Model.resolve("Collabora.Code.Discovery", XWiki.EntityType.DOCUMENT));
    let discoveryURL = discoveryDoc.getURL('view', $.param({
      xpage: 'plain',
      outputSyntax: 'plain',
      server: wopiClientHost
    }))
    $.getJSON(discoveryURL).done(function(resp) {
      let wopiClientUrl = resp['url'];
      let accessToken =  resp['token'];
      let wopiUrl = wopiClientUrl + 'WOPISrc=' + wopiSrc;
      $('#collaboraForm').attr('action', wopiUrl);
      $('#collaboraForm input[name=accessToken]').attr('value', accessToken);
      $('#collaboraForm').submit();
    }).fail(function(jqxhr, textStatus, error) {
      new XWiki.widgets.Notification("Error while loading this file. Cause: " + error);
    });
  });
});</code>
