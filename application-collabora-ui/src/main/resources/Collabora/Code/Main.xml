#if ("$!request.document" == '')
  $escapetool.xml($services.localization.render('collabora.validation.documentMissing'))
#else
  #set ($fileDoc = $xwiki.getDocument($request.document))
  #if ("$!request.filename" == '')
    $escapetool.xml($services.localization.render('collabora.validation.filenameMissing'))
  #else
    #set ($filename = $request.filename)
    #set ($fileType = $filename.substring($filename.lastIndexOf('.')))
    #set ($attachment = $fileDoc.getAttachment($request.filename))
  #end
#end
#if (!$attachment)
  $escapetool.xml($services.localization.render('collabora.validation.attachmentMissing'))
#else
  #if ($fileDoc.hasAccessLevel('edit'))
    #set ($mode = 'edit')
    #set ($currentAction = "$escapetool.xml($services.localization.render('editing'))")
    #set ($canEdit = true)
  #else
    #set ($mode = 'view')
    #set ($currentAction = '')
    #set ($canEdit = false)
  #end

{{html clean=false}}
&lt;!DOCTYPE html&gt;
&lt;html&gt;

&lt;head&gt;
  &lt;meta http-equiv="Content-Type" content="text/html; charset=UTF-8"&gt;
  &lt;title&gt;${currentAction}$escapetool.xml($request.filename)&lt;/title&gt;
  #template('stylesheets.vm')
  &lt;link rel="stylesheet" type="text/css" href="$doc.getURL('ssx')"&gt;
  ## Old IE
  &lt;link rel="shortcut icon" href="$xwiki.getSkinFile('icons/xwiki/favicon.ico')" /&gt;
  ## Present, HTML5
  &lt;link rel="icon" href="$xwiki.getSkinFile('icons/xwiki/favicon16.png')" type="image/png" /&gt;
  ## The future, scalable icons
  &lt;link rel="icon" href="$xwiki.getSkinFile('icons/xwiki/favicon.svg')" type="image/svg+xml" /&gt;
  ## For smart phones and tablets
  &lt;link rel="apple-touch-icon" href="$xwiki.getSkinFile('icons/xwiki/favicon144.png')" /&gt;

  &lt;script type="text/javascript" src="$services.webjars.url('requirejs', 'require.min.js')"&gt;&lt;/script&gt;
  &lt;script src="$doc.getURL('jsx')" defer="defer"&gt;&lt;/script&gt;
  &lt;script type="text/javascript" language="javascript"&gt;
    require.config({
      paths: {
        'jquery': "$services.webjars.url('jquery', 'jquery.min.js')"
      }
    });
  &lt;/script&gt;
&lt;/head&gt;

&lt;body&gt;
  ## Display logo and some information about the currently edited file. Show Cancel actions on the right.
  ## Save and Save as actions are included in the Collabora UI.
  &lt;div&gt;
    &lt;table class="saveBarTable"&gt;
      &lt;tr&gt;
        &lt;td class="middle"&gt;
          &lt;a href="${xwiki.getURL('Main.WebHome')}"&gt;&lt;img src="$xwiki.getSkinFile('logo.svg')"&gt;&lt;/a&gt;
        &lt;/td&gt;
        &lt;td class="middle"&gt;
          &lt;strong&gt;$currentAction&lt;/strong&gt;
          &lt;em&gt;$request.filename&lt;/em&gt;
          $escapetool.xml($services.localization.render('collabora.inFrameContent.onPage'))
          &lt;a href="${fileDoc.URL}#Attachments"
            title="$escapetool.xml($services.localization.render('cancel'))"&gt;$fileDoc.displayTitle&lt;/a&gt;
        &lt;/td&gt;
        &lt;td class="middle right"&gt;
          &lt;a href="${fileDoc.URL}#Attachments" class="btn btn-default"
            title="$escapetool.xml($services.localization.render('cancel'))"&gt;
            $escapetool.xml($services.localization.render('cancel'))
          &lt;/a&gt;
        &lt;/td&gt;
      &lt;/tr&gt;
    &lt;/table&gt;
  &lt;/div&gt;
  ## Informatin needed by collabora
  ## TODO: Create a configuration page and get server from there.
  &lt;span id="collaboraServer" data-collabora-server="http://collabora:9980" data-file-id="$services.model.serialize($attachment.getReference(), 'default')"&gt;&lt;/span&gt;
  &lt;form class="hidden" action="" enctype="multipart/form-data" method="post" target="collaboraViewer"
    id="collaboraForm"&gt;
    &lt;input name="accessToken" value="" type="hidden" id="accessToken" /&gt;
    &lt;input type="submit" value="" /&gt;
  &lt;/form&gt;
  ## Where the document will be displayed.
  &lt;iframe id="collaboraViewer" name="collaboraViewer"&gt;&lt;/iframe&gt;
&lt;/body&gt;

&lt;/html&gt;
{{/html}}
#end
{{/velocity}}
