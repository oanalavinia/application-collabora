    <property>
      <code>require(['jquery'], function($) {
  $(function() {
    const wopiClientHost = $("#collaboraServer").data('collaboraServer');
    const fileId = $("#collaboraServer").data('fileId');
    const wopiSrc = window.location.origin + '/xwiki/rest/wopi/files/' + fileId;
    const discoveryURL = XWiki.contextPath + '/rest/discovery';
    $.getJSON(discoveryURL, $.param({
      xpage: 'plain',
      outputSyntax: 'plain',
      server: wopiClientHost,
      ext: fileId.split('.').pop(),
      fileId: fileId
    })).done(function(resp) {
      const wopiClientUrl = resp['urlSrc'];
      const accessToken =  resp['token'];
      const wopiUrl = wopiClientUrl + 'WOPISrc=' + wopiSrc;
      $('#collaboraForm').attr('action', wopiUrl);
      $('#collaboraForm input[name=access_token]').attr('value', accessToken);
      $('#collaboraForm').submit();
    }).fail(function(jqxhr, textStatus, error) {
      new XWiki.widgets.Notification("Error while loading this file. Cause: " + error);
    });
  });

  $(window).unload(function() {
    const fileId = $("#collaboraServer").data('fileId');
    const clearTokenURL = XWiki.contextPath + '/rest/discovery/clearToken?fileId=' + fileId;
    navigator.sendBeacon(clearTokenURL);
  });
});</code>
